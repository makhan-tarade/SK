    <div class="main-content-inner">
        <div class="row">
            <!-- Textual inputs -->
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="header-title">Books Add Form</h4>


                        <form action="/book-add" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label for="example-text-input" class="col-form-label">Book </label>
                                <input class="form-control" type="text" name="book_name" placeholder="Book name" id="example-text-input">
                            </div>

                        

                            <div class="form-group">
                                <label for="example-text-input" class="col-form-label">Book Pic</label>
                                <input class="form-control" type="file" name="book_pic" placeholder="Book Pic" id="example-text-input">
                            </div>

                            
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>

                          
                        </form>
                    </div>
                </div>
            </div>
            <!-- Textual inputs -->
        </div>

    </div>
