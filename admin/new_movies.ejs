        <div class="main-content-inner">
       
            <div class="row">
                <!-- Primary table -->
                <div class="col-12 mt-4">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="header-title">Movies</h4>
                            <div class="table-responsive datatable-primary">
                                <table id="dataTable2" class="text-center">
                                    <thead class="text-capitalize">
                                    <tr>
                                        <th>Movies-Pic</th>
                                        <th>Movies Name</th>
                                    
                               
                                        <th scope="col">action</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                        
                                     
                                            
                                        <% if(movie){ %>
                                            <% movie.forEach(function(c,i){%>
                                                <tr>
                                                    <td>
                                                        <div class="img_pic">
                                                            <img src="/<%= c.movies_pic %>" alt="movies">
                                                        </div>
                                                        
                                                    </td>
                                                    <td><%= c.movies_name%></td>
                                                  
                                                  
                                                    <td>
