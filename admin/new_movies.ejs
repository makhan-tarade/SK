    <div class="main-content-inner">
        <div class="row">
            <!-- Textual inputs -->
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="header-title">Movies Add Form</h4>


                        <form action="/movies-add" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label for="example-text-input" class="col-form-label">Movies</label>
                                <input class="form-control" type="text" name="movies_name" placeholder="Movies name" id="example-text-input">
                            </div>

                       
                          

                            <div class="form-group">
                                <label for="example-text-input" class="col-form-label">Movies Pic</label>
                                <input class="form-control" type="file" name="movies_pic" placeholder="Movies pic" id="example-text-input">
                            </div>

                            
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>

                          
                        </form>
                    </div>
                </div>
            </div>
            <!-- Textual inputs -->
        </div>

    </div>
