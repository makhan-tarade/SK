<!-- modal -->
<div class="modal fade" id="profileAndDegination" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header pop1-header">
                <h5 class="modal-title pop1-h5" id="exampleModalLongTitle">Edit Profile</h5>
