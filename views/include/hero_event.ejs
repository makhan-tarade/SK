<div class="modal fade" id="background_pic_change" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header pop1-header">
                <h5 class="modal-title pop1-h5" id="exampleModalLongTitle">Edit Profile</h5>
                <button type="button" class="close pop1-close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">


                <form action="/background_pic_work" method="post" enctype="multipart/form-data">

                    <div class="row">
                        <div class="form-group">

                            <div class="pop-img back-pop-img">
                                <img id="background" src="assets/img/popupvector.png" alt="your image"
                                    style=" width: 100%; height: 100%;" />
                            </div>

                            <p class="pop1-p">Upload A Photo</p>

                            <div class="ABC">
                                <input type="file" name="background_pic" class="form-control-file imgchoose"
                                    id="exampleFormControlFile11" onchange="readURL_b(this);" required>
                            </div>

                        </div>


                    </div>

                    <div class="modal-footer pop1-foot">

                        <button type="button" class="btn btn-secondary pop1-btn2" data-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary pop1-btn1">Save</button>

                    </div>

                </form>

            </div>

        </div>
    </div>
</div>



<script>

    function readURL_a(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#my-profile')
                    .attr('src', e.target.result);
            };

            reader.readAsDataURL(input.files[0]);
        }
    }

    function readURL_b(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#background')
                    .attr('src', e.target.result);
            };

            reader.readAsDataURL(input.files[0]);
        }
    }
</script>